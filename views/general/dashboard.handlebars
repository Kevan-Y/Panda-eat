<div class="container">
    <h1 class="title mt-3">Dashboard</h1>
    <hr>
    <h3>Account information</h3>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <span class="font-weight-bold">First name:</span> <span>{{userData.firstName}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <span class="font-weight-bold">Last name:</span> <span>{{userData.lastName}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <span class="font-weight-bold">Email:</span> <span>{{userData.email}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <span class="font-weight-bold">Account Type:</span>
                {{#if userData.role}}
                <span>{{userData.role}}</span>
                {{else}}
                <span>Customer</span>
                {{/if}}
            </div>
        </div>
    </div>
    {{#if userData.role}}
    <h3>Admin Section</h3>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <a href="/meal-package/add" class="btn btn-link">Add Meal package</a>
                <a href="/meal-package/meals" class="btn btn-link">View Meal package</a>
            </div>
        </div>
    </div>
    {{/if}}
</div>