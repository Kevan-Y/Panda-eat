<div class="hero-image-meal">
  <div class="hero-text-meal">
    <h1>Our meal package</h1>
  </div>
</div>

<div class="container text-center meal">
  <div class="row">
    <div class="col-md">
      <h2 class="title-meal">Pick a package, choose your meals, achieve your goal - it's that easy!</h2>
    </div>
  </div>
  <div class="row">
    {{#each mealPackage }}
    <div class="col-xl-3 col-lg-6">
      <div class="card">
        <a href="/meal-package/meal?id={{this._id}}"> <img class="card-img-top" src="img/{{this.image}}"
            alt="Card image for {{this.name}}"></a>
        <span class="badge badge-notify">{{#if this.top}}<i class="fas fa-crown "></i> {{/if}}</span>
        <div class="card-body">
          <h5 class="card-text"><a href="/meal-package/meal?id={{this._id}}">{{this.name}}</a></h5>
          <p class="card-text">{{this.description}}</p>
        </div>
        <div class="card-footer">
          <h6>${{this.price}}</h6>
        </div>
      </div>
    </div>
    {{else}}
    <div class="text col-md-12">No meal data is available at this time.</div>
    {{/each}}
  </div>
</div>